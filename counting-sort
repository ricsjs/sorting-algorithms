def counting_sort(v):
    n = len(v)

    s = min(v)
    b = max(v)

    size_c = b - s + 1

    c = [0] * size_c

    for i in range(n):
        c[v[i] - s] += 1

    for i in range(1, size_c):
        c[i] += c[i - 1]

    # vetor aux W
    w = [0] * n

    for i in range(n - 1, -1, -1):
        d = v[i] - s
        w[c[d] - 1] = v[i]
        c[d] -= 1

    for i in range(n):
        v[i] = w[i]

    return v


# exemplo de uso
v = [4, 2, 2, 8, 3, 3, 1]
print(counting_sort(v)) 
